{
  "manifest_version": 3,
  "name": "METAR lookup",
  "description": "A tool to look up weather at airports",
  "version": "1.0",
  "permissions": [
     "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "index.html"
  }
}